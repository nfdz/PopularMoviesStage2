<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="DetailsActivityTheme" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/DetailsActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/DetailsActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="DetailsActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">showHome</item>
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <!-- Main activity styles -->
    <style name="MainActivityText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="MainActivityMovieTitleText" parent="@style/MainActivityText">
        <item name="android:textSize">@dimen/movie_item_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainActivityMovieRatingText" parent="@style/MainActivityText">
        <item name="android:textSize">@dimen/movie_item_rating_size</item>
    </style>

    <!-- Detail activity styles -->

    <style name="DetailHeaderTitleText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/movie_detail_header_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailHeaderText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/movie_detail_header_text_size</item>
    </style>

    <style name="DetailBodyText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/movie_detail_body_text_size</item>
    </style>

    <style name="DetailBodyTitleText" parent="@style/DetailBodyText">
        <item name="android:textSize">@dimen/movie_detail_body_title1_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="DetailBodyTitleText2" parent="@style/DetailBodyTitleText">
        <item name="android:textSize">@dimen/movie_detail_body_title2_size</item>
    </style>

</resources>
