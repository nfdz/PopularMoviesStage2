<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_movie_detail_poster"
                android:layout_width="@dimen/movie_detail_poster_width"
                android:layout_height="@dimen/movie_detail_poster_height"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/tv_movie_detail_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/tv_movie_detail_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_movie_detail_title"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:paddingBottom="15dip" />
            <TextView
                android:id="@+id/tv_movie_detail_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
