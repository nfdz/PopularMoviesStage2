<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--This ImageView shows the movie poster image-->
            <ImageView
                android:id="@+id/iv_movie_detail_poster"
                android:layout_width="@dimen/movie_detail_poster_width"
                android:layout_height="@dimen/movie_detail_poster_height"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center" />

            <!--This TextView shows the movie average rate-->
            <TextView
                android:id="@+id/tv_movie_detail_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/text_size_movie_detail_rating"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:paddingTop="10dp"
                tools:text="5/5" />

            <!--This TextView shows the movie release date-->
            <TextView
                android:id="@+id/tv_movie_detail_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/text_size_movie_detail_release"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                tools:text="11/22/33" />

            <!--This TextView shows the movie title-->
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_movie_detail_title"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/text_size_movie_detail_title"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:paddingBottom="15dip"
                tools:text="Movie Title" />

            <!--This TextView shows the movie plot synopsis-->
            <TextView
                android:id="@+id/tv_movie_detail_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_movie_detail_synopsis"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. " />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
